<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"    tools:context=".ViewAllResultsActivity">


    <Button
        android:id="@+id/addMoodData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:fontFamily="@font/josefin_sans_semibold"
        android:textColor="#D5252525"
        android:background="@color/white"

        android:gravity="center"
        android:text="Add Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:layout_constraintVertical_bias="0.339" />

    <TextView
        android:id="@+id/moodTextTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:fontFamily="@font/josefin_sans_thin"
        android:gravity="center_horizontal|top"
        android:singleLine="true"
        android:text="TEST"


        android:textAllCaps="true"
        android:textColor="#5A226D"
        android:textSize="36sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moodTextTxt">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar_1"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/symptomTxt_1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="3dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/seekBar_2"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/symptomTxt_2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/seekBar_3"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/symptomTxt_3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/seekBar_4"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/symptomTxt_4"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/seekBar_5"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/symptomTxt_5"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/seekBar_6"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/symptomTxt_6"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/seekBar_7"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/symptomTxt_7"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/seekBar_8"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/symptomTxt_8"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <TextView
                android:id="@+id/symptomTxt_8"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symptomTxt_7"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/josefin_sans_thin"
                android:text="@string/symptom_1"
                android:textColor="#D5252525"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_alignParentRight="true"

                />

            <TextView
                android:id="@+id/symptomTxt_6"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symptomTxt_5"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/josefin_sans_thin"
                android:text="@string/symptom_6"
                android:textColor="#D5252525"
                android:textSize="18sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/symptomTxt_7"
                android:layout_width="190dp"
