                android:textColor="#D5252525"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_alignParentRight="true"

                />


            <TextView
                android:id="@+id/symptomTxt_2"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symptomTxt_1"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/josefin_sans_thin"
                android:text="@string/symptom_2"
                android:textColor="#D5252525"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_alignParentRight="true"

                />

            <TextView
                android:id="@+id/symptomTxt_5"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/symptomTxt_4"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/josefin_sans_thin"
                android:text="@string/symptom_5"
                android:textColor="#D5252525"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_alignParentRight="true"

                />

            <TextView
                android:id="@+id/symptomTxt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/josefin_sans_thin"
                android:maxLines="1"
                android:text="@string/symptom_1"
                android:textColor="#D5252525"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_alignParentRight="true" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>