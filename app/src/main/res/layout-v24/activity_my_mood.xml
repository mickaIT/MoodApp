<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"    tools:context=".ViewAllResultsActivity">


    <Button
        android:id="@+id/addMoodData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:fontFamily="@font/josefin_sans_semibold"
        android:textColor="#D5252525"
        android:background="@color/white"

        android:gravity="center"
        android:text="Add Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:layout_constraintVertical_bias="0.339" />

    <TextView
        android:id="@+id/moodTextTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"

        android:fontFamily="@font/josefin_sans_thin"
        android:gravity="center_horizontal|top"
        android:singleLine="true"
        android:text="TEST"


        android:textAllCaps="true"
        android:textColor="#9426b5"
        android:textSize="50sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moodTextTxt">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/talkativenessSeekBar"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/talkativenessTxt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="3dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/insomniaSeekBar"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/insomniaTxt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/flightOfIdeasSeekBar"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/flightOfIdeasTxt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/tirednessSeekBar"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tirednessTxt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/hyperactivitySeekBar"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/hyperActivityTxt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/irritabilitySeekBar"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/inrritabilityTxt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/megalomaniaSeekBar"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/megalomaniaTxt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <SeekBar
                android:id="@+id/poorDecisionsSeekBar"
                style="@android:style/Widget.Material.SeekBar.Discrete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/poorDecisionsTxt"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:max="10"
                android:progress="5"

                android:progressTint="@color/orange"
                android:thumbTint="@color/orange"
                />

            <TextView
                android:id="@+id/poorDecisionsTxt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/megalomaniaTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="20dp"
                android:text="Poor decisions"
                tools:layout_alignParentRight="true"
                android:fontFamily="@font/josefin_sans_thin"
                android:textColor="#D5252525"
                android:textStyle="bold"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/inrritabilityTxt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hyperActivityTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="20dp"
                android:text="Irritability"
                android:fontFamily="@font/josefin_sans_thin"
                android:textColor="#D5252525"
                android:textStyle="bold"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/megalomaniaTxt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inrritabilityTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="20dp"
                android:text="Megalomania"
                tools:layout_alignParentRight="true"
                android:fontFamily="@font/josefin_sans_thin"
                android:textColor="#D5252525"
                android:textStyle="bold"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/tirednessTxt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flightOfIdeasTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="20dp"
                android:text="Tiredness"
                tools:layout_alignParentRight="true"
                android:fontFamily="@font/josefin_sans_thin"
                android:textColor="#D5252525"
                android:textStyle="bold"
                android:textSize="18sp"

                />


            <TextView
                android:id="@+id/flightOfIdeasTxt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/insomniaTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:text="Flight of ideas"
                tools:layout_alignParentRight="true"
                android:fontFamily="@font/josefin_sans_thin"
                android:textColor="#D5252525"
                android:textStyle="bold"
                android:textSize="18sp"

                />


            <TextView
                android:id="@+id/insomniaTxt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/talkativenessTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:text="Insomnia"
                tools:layout_alignParentRight="true"
                android:fontFamily="@font/josefin_sans_thin"
                android:textColor="#D5252525"
                android:textStyle="bold"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/hyperActivityTxt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tirednessTxt"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="20dp"
                android:text="Hyperactivity"
                tools:layout_alignParentRight="true"
                android:fontFamily="@font/josefin_sans_thin"
                android:textColor="#D5252525"
                android:textStyle="bold"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/talkativenessTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:text="Talkativeness"
                tools:layout_alignParentRight="true"
                android:fontFamily="@font/josefin_sans_thin"
                android:textColor="#D5252525"
                android:textStyle="bold"
                android:textSize="18sp"
                />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>